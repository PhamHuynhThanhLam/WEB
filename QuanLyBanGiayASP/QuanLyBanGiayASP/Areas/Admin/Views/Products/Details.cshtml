@model QuanLyBanGiayASP.Models.ViewModels.ProductViewModels
@using QuanLyBanGiayASP.Extensions

<br />
<h2 >Product Details</h2>
<style>
    .size {
        width: 10px;
        height: 10px;
    }
</style>
<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Name</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Price</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Merchant</label>
            </div>
            <div class="col-8">
                <select asp-for="@Model.Products.MerchantId" asp-items="Model.Merchants.ToSelectListItem(Model.Products.MerchantId)" readonly class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Brand</label>
            </div>
            <div class="col-8">
                <select asp-for="@Model.Products.BrandId" asp-items="Model.Brands.ToSelectListItemBrand(Model.Products.BrandId)" readonly class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Description</label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Description" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label style="color:white">Availabe</label>
            </div>
            <div class="col-8">
                <input type="checkbox" id="size" readonly class="form-control" asp-for="Products.Available" />

            </div>
        </div>
    </div>
    <div class="col-1">

    </div>
    <div class="col-3">
        <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
    </div>


    <br />
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Products.ID">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
