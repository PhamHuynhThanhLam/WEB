@model IEnumerable<QuanLyBanGiayASP.Models.Products>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="col-12">
        <h2 > Product List</h2>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Available)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Description)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Merchants)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Brands)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @String.Format("{0:c}", item.Price)
        </td>
        <td>
            @Html.DisplayFor(m => item.Available)
        </td>
        <td>
            @Html.DisplayFor(m => item.Description)
        </td>
        <td>
            @if (!item.Merchants.Name_merchant.Equals("--None--"))
            {
                @Html.DisplayFor(m => item.Merchants.Name_merchant)
            }

        </td>
        <td>
            @if (!item.Brands.Name.Equals("--None--"))
            {
                @Html.DisplayFor(m => item.Brands.Name)
            }

        </td>
        <td>
            <partial name="_TableButtonPartial" model="item.ID" />
        </td>
    </tr>

        }
    </table>
</div>


