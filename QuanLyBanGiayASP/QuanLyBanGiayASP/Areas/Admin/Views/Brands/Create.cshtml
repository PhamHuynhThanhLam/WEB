@model QuanLyBanGiayASP.Models.Brands
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 style="text-align:center;color:ghostwhite">Create Brand</h2>


<form method="post" asp-action="Create">
    <div style="margin-top:20px"></div>
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-white"></div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Name" style="color:white">Name</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-white"></span>
        </div>     
        <br />
        <div class="form-group" style="text-align:center">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





