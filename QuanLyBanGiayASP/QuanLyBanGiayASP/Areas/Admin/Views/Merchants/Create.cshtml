@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 style="text-align:center;color:ghostwhite">Create Product Type</h2>


<form method="post" asp-action="Create">
    <div style="margin-top:20px"></div>
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-white"></div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Name_merchant" style="color:white">Merchant</label>
            </div>
            <div class="col-5">
                <input asp-for="Name_merchant" class="form-control" />
            </div>
            <span asp-validation-for="Name_merchant" class="text-white"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Address" style="color:white">Address</label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-white"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Phone" style="color:white">Phone</label>
            </div>
            <div class="col-5">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-white"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Description" class="text-white">Description</label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-white"></span>
        </div>
        <br />
        <div class="form-group" style="text-align:center    ">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





