@model QuanLyBanGiayASP.Models.Merchants
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2>Edit Merchant</h2>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Name_merchant" style="color:white">Merchant</label>
            </div>
            <div class="col-5">
                <input asp-for="Name_merchant" class="form-control" />
            </div>
            <span asp-validation-for="Name_merchant" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Address" style="color:white">Address</label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Phone" style="color:white">Phone</label>
            </div>
            <div class="col-5">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-2">
                <label asp-for="Description" style="color:white">Description</label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />
        <div style="text-align:center">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.ID" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



