@model IEnumerable<QuanLyBanGiayASP.Models.Merchants>
@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="col-12">
        <h2 style="text-align:center;color:white"> Merchant List</h2>
    </div><div class="col-9"></div>
    <div class="col-md-3 col-sm-6 text-right">
        <a asp-action="Create" class="btn btn-sm animated-button thar-four"><i class="fas fa-plus"></i>   &nbsp; New Merchant</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name_merchant)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Address)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Description)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name_merchant)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.ID" />
                </td>
            </tr>

        }
    </table>
</div>


